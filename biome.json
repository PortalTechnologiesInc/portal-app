{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "bracketSpacing": true,
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noNodejsModules": "off",
        "useImportExtensions": "off",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noUnusedFunctionParameters": "warn",
        "noInvalidUseBeforeDeclaration": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "warn",
        "noArrayIndexKey": "warn",
        "noConsole": "warn",
        "noDebugger": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 60
          }
        },
        "noStaticOnlyClass": "off",
        "noUselessFragments": "warn",
        "noBannedTypes": "warn"
      },
      "style": {
        "noDefaultExport": "off",
        "useNamingConvention": "off",
        "noNonNullAssertion": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "error"
      }
    }
  },
  "files": {
    "includes": ["**", "!node_modules/", "!android/", "!ios/", "!.expo/", "!build/", "!.maestro"]
  }
}
