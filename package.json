{
  "name": "cc.getportal.portal",
  "trustedDependencies": [
    "@breeztech/breez-sdk-spark-react-native"
  ],
  "main": "index.ts",
  "version": "1.0.9",
  "type": "module",
  "scripts": {
    "start": "bun run typecheck && bun run check && expo start",
    "android": "bun run typecheck && bun run check && expo run:android",
    "android-release": "bun run typecheck && bun run check && expo run:android --variant release",
    "ios": "bun run typecheck && bun run check && expo run:ios",

    "test": "jest --watchAll",

    "typecheck": "tsc --noEmit 2>&1 | grep -v 'node_modules' | grep 'error TS' && exit 1 || exit 0",

    "lint": "biome lint --diagnostic-level=error .",
    "lint:warnings": "biome lint --diagnostic-level=warn .",
    "lint:strict": "biome lint --error-on-warnings .",
    "lint:fix": "biome lint --write --diagnostic-level=error .",

    "format": "biome format --write .",
    "format:check": "biome format .",

    "check": "biome check --diagnostic-level=error .",
    "check:warnings": "biome check --diagnostic-level=warn .",
    "check:strict": "biome check --error-on-warnings .",
    "check:fix": "biome check --write --diagnostic-level=error .",

    "prepare": "husky"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "dependencies": {
    "@breeztech/breez-sdk-spark-react-native": "^0.5.2",
    "@expo/vector-icons": "~14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-clipboard/clipboard": "^1.16.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "date-fns": "^4.1.0",
    "expo": "53.0.19",
    "expo-blur": "~14.1.5",
    "expo-camera": "~16.1.10",
    "expo-clipboard": "~7.1.5",
    "expo-constants": "~17.1.6",
    "expo-dev-client": "~5.2.4",
    "expo-device": "~7.1.4",
    "expo-file-system": "~18.1.10",
    "expo-font": "~13.3.1",
    "expo-haptics": "~14.1.4",
    "expo-image-picker": "~16.1.4",
    "expo-linking": "~7.1.6",
    "expo-local-authentication": "~16.0.5",
    "expo-notifications": "~0.31.4",
    "expo-router": "~5.1.2",
    "expo-secure-store": "~14.2.3",
    "expo-splash-screen": "~0.30.9",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.10",
    "expo-task-manager": "^13.1.6",
    "expo-web-browser": "~14.2.0",
    "light-bolt11-decoder": "^3.2.0",
    "lottie-react-native": "^7.3.4",
    "lucide-react-native": "~0.516.0",
    "nostr-tools": "~2.12.0",
    "portal-app-lib": "^0.4.12",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "~5.5.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-input-select": "^2.1.3",
    "react-native-nfc-manager": "^3.16.1",
    "react-native-qrcode-svg": "^6.3.20",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-uuid": "^2.0.3",
    "react-native-web": "^0.20.0",
    "react-native-webview": "13.13.5",
    "use-debounce": "^10.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@biomejs/biome": "^2.3.10",
    "@react-native-community/cli": "latest",
    "@types/jest": "~29.5.12",
    "@types/react": "~19.0.10",
    "@types/react-test-renderer": "^19.0.0",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "~53.0.9",
    "lint-staged": "^16.2.7",
    "portal-sdk": "^0.1.4",
    "react-test-renderer": "^19.0.0",
    "typescript": "~5.8.3"
  },
  "private": true,
  "packageManager": "bun@1.2.5"
}
